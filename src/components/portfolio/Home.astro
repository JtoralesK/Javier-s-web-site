---
import { home } from "../../es";
---

<main class="h-screen">
  <div class="flex items-center justify-center flex-col">
    <div class="w-full flex flex-wrap-reverse items-center lg:justify-between">
      <div class="lg:w-2/3">
        <div class="mt-10 lg:mt-20">
          <h1 class="text-2xl font-bold lg:text-5xl text-principal-color">
            {home.title}
          </h1>
          <p
            class="text-sm sm:mt-4 lg:text-lg lg:mt-10 text-gray-1 font-normal"
          >
            {home.description}
          </p>
        </div>
        <div class="mt-6 lg:mt-12">
          <div class="flex flex-row items-center">
            <span class="material-icons text-gray-1"> location_on</span>
            <p class="text-gray-1">{home.location}</p>
          </div>
          <div class="flex items-center mt-2">
            <div class="w-3 h-3 rounded-full bg-green-300 m-1"></div>
            <div class="text-gray-1">{home.available}</div>
          </div>
        </div>
        <div class="mt-10 text-2xl flex flex-row gap-3 text-third-color">
          <a
            href="https://github.com/JtoralesK?tab=repositories"
            target="_blank"
          >
            <i class="fa-brands fa-github"></i></a
          >
          <a href="" target="_blank"> <i class="fa-brands fa-twitter"></i> </a>
          <a href="https://www.linkedin.com/in/javitorales/ " target="_blank">
            <i class="fa-brands fa-linkedin"></i>
          </a>
        </div>
      </div>
      <div class="sm:w-full sm:flex sm:justify-center md:justify-center">
        <img
          src="https://res.cloudinary.com/apxschool/image/upload/v1708987293/us9nkdrg5sfs0eg3zz3o.jpg"
          alt="Profile image"
          class="sm:w-auto sm:h-[15em] md:h-[25em] lg:w-64 lg:h-64 shadow-2xl shadow-gray-800"
        />
      </div>
    </div>
  </div>
</main>
