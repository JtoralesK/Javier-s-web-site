---
import { standar } from "../pages/index.astro";
import DefaultP from "./DefaultP.astro";
import { aboutMe } from "../es";
---

<div
  id="sobremi"
  class={"w-full sm:h-auto lg:h-auto lg:pb-10 bg-second-color dark:bg-dark-two" +
    standar}
>
  <DefaultP text="Sobre mi" />
  <div class="flex flex-wrap">
    <div
      class="w-full lg:w-1/2 sm:h-[20em] flex flex-row justify-center items-center"
    >
      <img
        src="https://cdn.openart.ai/stable_diffusion/f5c3d6dc5425f022a0e0cef3c138b68d02c6171a_2000x2000.webp"
        alt="Profile image"
        class="sm:w-full lg:w-10/12 object-cover sm:h-[18em] sm:p-2 lg:p-10"
      />
    </div>
    <div class="w-full lg:w-1/2 sm:mt-10 flex flex-col justify-center">
      <h2 class="text-xl text-bold dark:text-principal-color">
        {aboutMe.title}
      </h2>
      {
        aboutMe.description.map((text) => {
          return (
            <>
              <br />
              <p class="text-16 text-gray-600">{text}</p>
            </>
          );
        })
      }
      <ul
        class="list-disc pl-2 grid sm:grid-cols-1 lg:grid-cols-2 gap-4 w-5/6 text-gray-600 mt-6 sm:mb-12"
      >
        {
          aboutMe.skills.map((skill) => {
            return <li class="list-inside">{skill}</li>;
          })
        }
      </ul>
    </div>
  </div>
</div>
